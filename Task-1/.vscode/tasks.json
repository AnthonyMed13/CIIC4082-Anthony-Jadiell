{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Assemble backgrounds",
            "type": "shell",
            "command": "ca65",
            "args": ["src/backgrounds.asm"],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Assemble reset",
            "type": "shell",
            "command": "ca65",
            "args": ["src/reset.asm"],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Link NES file",
            "type": "shell",
            "command": "ld65",
            "args": ["src/backgrounds.o", "src/reset.o", "-C", "nes.cfg", "-o", "task1.nes"],
            "dependsOn": ["Assemble backgrounds", "Assemble reset"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
